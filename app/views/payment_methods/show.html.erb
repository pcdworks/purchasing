<h1>Viewing Payment Method</h1>
<br/>
<div class="btn-group gap-2 d-flex">
  <%= link_to 'Back', payment_methods_path, class: 'btn btn-outline-secondary' %>
  <%= link_to 'Edit', edit_payment_method_path(@payment_method), class: 'btn btn-outline-warning' %>
  <%= link_to 'Destroy', @payment_method, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %>
</div>
<br/>
<div class="card">
  <div class="card-body">
    <div class="card-text bg-transparent">
      <%= @payment_method.title %>
    </div>
  </div>
</div>
