<h1>Requests</h1>
<br/>
<div class="d-grid gap-2">
  <%= link_to 'New', new_request_path, class: 'btn btn-primary text-light' %>
</div>
<br/>
<div class="container mt-3">
  <div class="row g-2">
    <% @requests.each do |request| %>
      <div class="col-sm-6">
        <div class="card mb-2">
          <div class="card-header">
            <div class="btn-group d-flex">
              <%= link_to 'View', request, class: 'btn btn-outline-info' %>
              <%= link_to 'Edit', edit_request_path(request), class: 'btn btn-outline-warning' %>
              <%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %>
            </div>
          </div>
          <div class="card-body">
            <%= request %>
            <div class="card-footer bg-transparent">
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<br>



<table>
  <thead>
    <tr>
      <th>Date received</th>
      <th>Date shipped</th>
      <th>Date ordered</th>
      <th>Order number</th>
      <th>Status</th>
      <th>Approved by</th>
      <th>Project</th>
      <th>Payment method</th>
      <th>Account</th>
      <th>Requested by</th>
      <th>Vendor</th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.date_received.to_date %></td>
        <td><%= request.date_shipped.to_date %></td>
        <td><%= request.date_ordered.to_date %></td>
        <td><%= request.order_number %></td>
        <td><%= request.status %></td>
        <td><%= request.approved_by %></td>
        <td><%= request.project %></td>
        <td><%= request.payment_method %></td>
        <td><%= request.account %></td>
        <td><%= request.requested_by %></td>
        <td><%= request.vendor %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>
<br/>