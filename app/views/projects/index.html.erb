<h1>Projects</h1>
<br/>
<div class="d-grid gap-2">
  <%= link_to 'New', new_project_path, class: 'btn btn-primary text-light' %>
</div>
<br/>
<div class="container mt-3">
  <div class="row g-2">
    <% @projects.each do |project| %>
      <div class="col-sm-6">
        <div class="card mb-2">
          <div class="card-header">
            <div class="btn-group d-flex">
              <%= link_to 'View', project, class: 'btn btn-outline-info' %>
              <%= link_to 'Edit', edit_project_path(project), class: 'btn btn-outline-warning' %>
              <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %>
            </div>
          </div>
          <div class="card-body">
            <div class="card-footer bg-transparent">
              <%= project.identifier %>-<%= project.title %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<br>
