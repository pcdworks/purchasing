<h1>Viewing Project</h1>
<br/>
<div class="btn-group gap-2 d-flex">
  <%= link_to 'Back', projects_path, class: 'btn btn-outline-secondary' %>
  <%= link_to 'Edit', edit_project_path(@project), class: 'btn btn-outline-warning' %>
  <%= link_to 'Destroy', @project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %>
</div>
<br/>
<div class="card">
  <div class="card-body">
    <div class="card-text bg-transparent">
      <%= @project %>
    </div>
  </div>
</div>
