<h1>Viewing Client</h1>
<br/>
<div class="btn-group gap-2 d-flex">
  <%= link_to(clients_path, class: 'btn btn-outline-secondary') do %>
    <i class="fa-solid fa-angle-left"></i>
  <% end %>
  <%= link_to(edit_client_path(@client), class: 'btn btn-outline-warning') do %>
    <i class="fa-solid fa-pencil"></i>
  <% end %>
  <%= link_to(@client, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger') do %>
    <i class="fa-solid fa-trash-can"></i>
  <% end %>
</div>
<br/>
<div class="card">
  <div class="card-body">
    <div class="card-text bg-transparent">
      <%= text_field_tag :title, @client, class: 'form-control', disabled: true %>
      <br/>
      <div class="form-check">
        <%= check_box_tag :active, @client.active, @client.active, class: 'form-check-input', disabled: true %>
        <label class="form-check-label">
          <%= Client.human_attribute_name :active %>
        </label>
      </div>
    </div>
  </div>
</div>
